@using DataAccess.CustomModels;
@model AgreementModal;


@*CancelAgreementModal*@
<div class="modal fade" id="cancleagreementModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <form class="modal-content">
            <input asp-for="ReqClientId" id="ReqClientid" hidden />
            <div class="modal-header" style="background-color:#00B7FF">
                <h5 class="modal-title text-light" id="exampleModalLabel">Cancel Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">

                <div class="mb-3">
                    <h5>Patient Name:@Model.fname @Model.lname </h5>
                </div>
                <div class="mb-3">
                    <textarea id="reason" class="form-control"  placeholder="Please provide a brief explanation for your cancelation"></textarea>
                    <small id="reasonRequired" class="d-none" style="color:red">Reason is required</small>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn text-light" id="cancel-agreement-submit-btn" style="background-color:#00B7FF" data-bs-dismiss="modal">Confirm</button>
                <button type="reset" class="btn border border-info" style="color:#00B7FF">Cancel</button>
            </div>

        </form>
    </div>
</div>


<script>
    $('#cancel-agreement-submit-btn').click(function () {
        debugger
        var description = $("#reason").val();
        var reqClientId = $("#ReqClientid").val();

        $.ajax({
            url: "/Home/CancelAgreementSubmit",
            data: {
                ReqClientid: reqClientId,
                Description: description
            },
            type: 'POST',
            success: function (result) {
                $('#rendermodel').html(result);
                $('#cancleagreementModal').modal('show');
                location.reload();
            },
            error: function (error) {
                console.log(error);
                alert('Error Fetching Request')
            },
        });
    });
</script>