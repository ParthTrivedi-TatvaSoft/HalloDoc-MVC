@{
    ViewData["Title"] = "patient_login";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registered Patients</title>
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/patient_login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
</head>


<body>

    <div class="container  d-flex flex-column justify-content-center align-items-center">
        <img class="float-right light" id="d-mode" role="button" onclick="myFunction()" src="/images/dark.png" alt="">
        <img src="/images/hallodoc.png" alt="   " class="hallodoc-img">
        <br><br>
        <a href=""></a>
        <p><a asp-controller="Home" asp-action="Index" class="text-decoration-none">&lt; Back</a></p>
        <h2>Login To Your Account</h2>
        <br>
        <div class="  input-div form-floating mb-3">
            <input type="email" class="icon1 form-control" id="floatingInput" placeholder="Username">
            <label for="floatingInput">Email </label>
            <i class="icon bi bi-person "></i>

        </div>
        <div class=" input-div form-floating mb-3">
            <input type="password" class="icon2 form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
            <i class="icon bi bi-eye"></i>

        </div>
        <br>

        <button>Log In</button>
        <br>
        <a asp-controller="Patient" asp-action="forgot_password" id="forget-pass">Forget Password?</a>

    </div>

    <footer>Terms of Conditions | Privacy Policy</footer>


    <script src="./js/bootstrap.bundle.js"></script>
    <script src="./js/custom.js"></script>
</body>

</html>