@using DataAccess.CustomModels;


@model OnCallModal;


<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h4 class="mb-4">MDs On Call</h4>
        @*         <button onclick="ShowScheduling()" id="back-btn">&lt; Back</button>
        *@
    </div>


    <div class="d-flex justify-content-between align-items-center mb-3 mt-2">
        <form role="search" class="d-flex align-items-center border border-rounded rounded border-info mb-3">
            <i type="search" class="bi bi-search px-2 text-black" style="position: absolute;"></i>
            <select class="form-select border-0 regionDropdown ps-5" id="MDsRegion" aria-label="Default select example" onchange="GetOnCall(this.value)">
                <option value="0">All Region</option>
                @foreach (var obj in Model.regions.ToList())
                {
                    <option value="@obj.Regionid">
                        @obj.Name
                    </option>
                }
            </select>
        </form>
        <div class="d-flex mb-3">
            <button type="button" class="btn btn-info text-light d-md-block d-none me-2" onclick="ShowScheduling()">
                Calendar View
            </button>
            <button type="button" class="btn btn-info text-light d-md-block d-none" onclick="ShiftReview()">
                Shift for
                Review
            </button>

        </div>
    </div>
    <div class="border rounded shadow p-3 bg-white dark-mode1">
        <div class="my-2 mb-3">
            <h5>MD's On Call</h5>
            <div id="matched-events" class="row my-2">
                @foreach (var oncall in Model.OnCall)
                {
                    <div class="col-4 my-2 fw-bolder d-flex align-items-center">
                        @if (@oncall.Photo == null)
                        {
                            <div class="me-2 text-center" style="width:40px;height:40px">
                                <img class="w-100 h-100 border rounded-5" src="~/Documents/profilePhoto.jpg" />
                            </div>
                        }
                        else
                        {
                            <div class="me-2 text-center" style="width:40px;height:40px">
                                <img class="w-100 h-100 border rounded-5" src="~/PhysicianImages/@oncall.Physicianid/ProfilePhoto.jpg" />
                            </div>
                        }
                        <div>Dr @oncall.Firstname</div>
                    </div>
                }


            </div>

        </div>

        <div class="mt-3">
            <h5>Physicians Off Duty</h5>

            <div id="unmatched-events" class="row">
                @foreach (var offduty in Model.OffDuty)
                {


                    <div class="col-4 my-2 fw-bolder d-flex align-items-center">
                        @if (@offduty.Photo == null)
                        {
                            <div class="me-2 text-center" style="width:40px;height:40px">
                                <img class="w-100 h-100 border rounded-5" src="~/Documents/profilePhoto.jpg" />
                            </div>
                        }
                        else
                        {
                            <div class="me-2 text-center" style="width:40px;height:40px">
                                <img class="w-100 h-100 border rounded-5" src="~/PhysicianImages/@offduty.Physicianid/ProfilePhoto.jpg" />
                            </div>
                        }
                        <div>Dr @offduty.Firstname</div>
                    </div>

                }
            </div>
        </div>

    </div>
</div>

<script>
    function GetScheduling() {
        $.ajax({
            method: "GET",
            url: "/adminDashboard/GetScheduling",
            success: function (res) {
                $("#provider-tab-pane").html(res);
            },

            error: function () {
                Swal.fire("Oops!", "Something is Wrong !!!", "error");
            },
        });
    }

    function GetOnCall(regionid) {
        $.ajax({
            method: "GET",
            url: "/Admin/MdOnCallData",
            data: { region: regionid },
            success: function (res) {
                $("#provider-tab-pane").html(res);
                $("#MDsRegion").val(regionid);
            },

            error: function () {
                Swal.fire("Oops!", "Something is Wrong !!!", "error");
            },
        });
    }


</script>