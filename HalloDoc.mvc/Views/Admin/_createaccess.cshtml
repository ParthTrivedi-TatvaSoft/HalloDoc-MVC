@using DataAccess.CustomModels;
@model CreateAccess;
<div>
    <div class="container d-flex justify-content-between mt-4">
        <h4>
            Create Role
        </h4>
        <button onclick="AccountAccess()" id="back-btn">&lt; Back</button>
    </div>
</div>

<div class="container justify-content-center mt-4">

    <div class="card border-0 shadow p-4 mb-5 rounded">
        <form>
            <div class="row">
                <div>
                    <span>Details</span>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <input type="text" class="form-control border" id="roleName" placeholder="Role Name" value="">
                        <label for="roleName">Role Name *</label>
                        <small id="roleReq" class="d-none text-danger">Role is required</small>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating border phone-div w-100 h-100 ">
                        <select class="form-select border-0" aria-label="Default select example" id="accountType">
                            <option value="0" selected>All</option>
                            <option value="1">Admin</option>
                            <option value="2">Physician</option>
                            <option value="3">Patient</option>
                        </select>
                        <label for="accountType">Account Type</label>
                    </div>
                </div>
            </div>

            <div class="row flex-wrap mt-4" id="roles">

                @foreach (var item in Model.Menu)
                {
                    <div class="col-3">
                        <input type="checkbox" class="m-1" value="@item.Menuid" />
                        <span>@item.Name</span>
                    </div>
                }
            </div>
            <div class="d-flex float-end mt-3">
                <button type="button" id="postForm" class="btn btn-outline-info float-end m-1">Save</button><br />
                <button type="reset" class="btn btn-danger float-end m-1">Cancel</button><br />
            </div>

        </form>
    </div>
</div>

<script>
    $("#roleName").on('input', function () {
        var rolename = $(this).val();
        if (rolename == "") {
            $("#roleReq").removeClass('d-none');
        }
        else {
            $("#roleReq").addClass('d-none');
        }
    });

    $(function () {
        $("#accountType").change(function () {
            let selectedValue = $('option:selected', this).val();

            $.ajax({
                url: '/Admin/FetchRoles',
                method: 'GET',
                data: { selectedValue: selectedValue },
                success: function (data) {
                    $('#roles').empty();

                    $.each(data.menu, function (index, item) {
                        var checkbox = $('<input>').attr({
                            type: 'checkbox',
                            value: item.menuid,
                            id: item.menuid,
                        }).addClass('m-1').addClass('')
                        var label = $('<label>').attr('for', item.menuid).text(item.name);
                        var div = $('<div>').addClass('col-3');
                        div.append(checkbox).append(label);
                        $("#roles").append(div);
                    })
                },
                error: function (error) {
                    console.error('Error fetching data: ' + error);
                }
            });
        });
    });
</script>

<script>

    $('#postForm').click(function () {

        let selectedBox = [];
        let roleName = $("#roleName").val();
        let accountType = $("#accountType").val();


        $("input:checkbox:checked").each(function () {
            selectedBox.push($(this).val());
        });

        console.log(selectedBox);
        console.log(roleName);
        console.log(accountType);
        if (roleName == "") {
            $("#roleReq").removeClass('d-none');
            return;
        }
        if (selectedBox.length == 0) {
            toastr.error("Check Atleast One Item");
            return;
        }

        $.ajax({
            url: "/Admin/CreateAccessPost",
            type: 'POST',
            data: {
                MenuIds: selectedBox,
                RoleName: roleName,
                AccountType: accountType,
            },
            success: function (result) {
                if (result.isRoleExists == true) {
                    toastr.error("Role Already Exists In Selected AccountType");
                    return;
                }
                else if (result.isCreated == true) {
                    toastr.success("Created Successfully");
                    accountAccess();
                }
                else {
                    toastr.error("Failed To Create");
                }
            },
            error: function (error) {
                console.log(error);
                alert('Error Cancelling Request')
            },
        });
    });


</script>