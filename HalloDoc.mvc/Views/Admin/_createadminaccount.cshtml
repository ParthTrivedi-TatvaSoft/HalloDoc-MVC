@using DataAccess.CustomModels;
@using DataAccess.Models;
@model CreateAdminAccount;


<div class="">
    <div class="container-fluid d-flex justify-content-between mt-4" style="max-width:1000px">
        <h4>
            Create Admin Account
        </h4>
        <a href="@Url.Action("admin_dashboard", "Admin")" class="btn btn-outline-info m-2 text-decoration-none float-end"
           id="back-btn">
            &lt; Back
        </a>
    </div>
    <div class="container-fluid justify-content-center shadow mt-4" style="max-width:1000px">
        <div class="viewCaseForm form-floating patient-request-form p-3">
            <form method="post" asp-action="AdminAccount" asp-controller="Admin" class="mb-4">
                <h5>Account Information</h5>
                <div class="row g-2 m-1">
                    <div class="col-4">
                        <div class="form-floating">
                            <input asp-for="UserName" type="text" class="form-control" id="userName" placeholder="">
                            <label for="">User Name</label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-4">
                        <div class="form-floating">
                            <input asp-for="AdminPassword" type="password" class="form-control " id="password" placeholder="">
                            <label for="floatingSelectGrid">Password</label>
                            <span asp-validation-for="AdminPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-floating phone-div w-100 h-100 " >
                            <select class="form-select mb-3" id="role">
                                <option>Active</option>
                                <option>Out</option>
                                <option>Died</option>
                            </select>
                            <label for="">Role</label>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <h5>Administration Information</h5>

                <div class="row g-2 m-1">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="FirstName" type="text" class="form-control" placeholder="">
                            <label for="">First Name</label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="LastName" type="text" class="form-control" placeholder="">
                            <label for="floatingSelectGrid">Last Name</label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="email" asp-for="Email" class="form-control" placeholder="">
                            <label for="">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="email" asp-for="ConfirmEmail" class="form-control" placeholder="">
                            <label for="">Confirm Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating phone-div " >
                            <input type="tel" asp-for="AdminPhone" class="patientPhone form-control w-100 h-100" placeholder="">
                            <label for="">Phone</label>
                            <span asp-validation-for="AdminPhone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex justify-content-start flex-wrap mt-4">
                        @foreach (Region region in Model.RegionList)
                        {

                            <div class="form-floating mt-1 me-3 checkColor ">
                                <input class="form-check-input border" value="@region.Regionid" name="AdminRegion" type="checkbox" style="" />
                                <span>@region.Name</span>
                            </div>

                        }
                    </div>
                </div>
                <h5>Mailing & Billing Information</h5>

                <div class="row g-2 m-1">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" asp-for="Address1" class="form-control" placeholder="">
                            <label for="">Address1</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" asp-for="Address2" class="form-control" placeholder="">
                            <label for="floatingSelectGrid">Address2</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" asp-for="City" placeholder="">
                            <label for="">City</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating phone-div w-100 h-100 ">
                            <select class="form-select border-0" aria-label="Default select example">
                                @foreach (var items in Model.RegionList)
                                {
                                    <option value="@items.Regionid" selected>@items.Name</option>
                                }
                            </select>
                            <label for="">Select A Region</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" asp-for="Zip" class="form-control" placeholder="">
                            <label for="">Zip</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating phone-div w-100 h-100 ">
                            <input type="tel" asp-for="BillingPhone" class="patientPhone form-control w-100 h-100" placeholder="">
                            <label for="">Phone</label>
                        </div>
                    </div>
                </div>


                <button type="submit" class="btn btn-success float-end m-1">Create Account</button><br />
            </form>
        </div>

    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.1.min.js"
        integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous">
</script>
<script>
    $('.admin-tab').removeClass("active");
    $('#access-tab').addClass("active");


</script>