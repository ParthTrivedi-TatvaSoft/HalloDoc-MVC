<script>
    $(document).ready(function () {
        $.ajax({
            url: "/Admin/BusinessTable",
            type: 'POST',
            data: {},
            success: function (result) {
                $('#businessTable').html(result);
            },
            error: function (error) {
                console.log(error);
        
            },
        });
    });

    function AddVendor() {
        $.ajax({
            url: '/Admin/AddVendor',
            type: 'GET',

            success: function (response) {
                $("#partner-tab-pane").html(response);
            }
        });
    }
    var searchVendor = document.getElementById("searchVendor");

    searchVendor.addEventListener("keydown", function (e) {
        if (e.code === 13) {
            searchVendor();
        }
    });
    function partnersearch(event) {
        var x = event.code;
        if (x == "Enter") {
            searchBusiness();
        }

    }

    function searchBusiness() {
        var vendor = $('#searchVendor').val();
        var profession = $('#searchProfession').val();

        $.ajax({
            url: '/Admin/SearchVendor',
            type: 'GET',
            data: { vendor: vendor, profession: profession },
            success: function (result) {
                $('#businessTable').html(result);
            },
            error: function (e) {
         
                console.log(e);
            }
        });
    }

</script>